@{
    ViewData["Title"] = "ML Model";
}

<!-- Header-->
<header class="py-5">
    <div class="container px-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xxl-6">
                <div class="text-center my-5">
                    <h1 class="fw-bolder mb-3">How severe will a crash be?</h1>
                    <p class="lead fw-normal text-muted mb-4">Fill in the questions below to determine how serious a crash will be.</p>
                </div>
            </div>
        </div>
    </div>
</header>

@model CrashData
<form method="post" asp-controller="Inference" asp-action="Score">
    <div class="form-group">
        <label asp-for="milepoint">Milepoint:</label>
        <select>
            <option value="0">Yes</option>
            <option value="1">No</option>
        </select>
    </div>

    <div>
        <label asp-for="intersection">Was this intersection related?</label>
        <select>
            <option value="0">No</option>
            <option value="1">Yes</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="teenager">Was a teenage driver involved?</label>
        <select>
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="dark">Was it dark outside?</label>
        <select>
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="sing_veh">Was there only one vehicle involved?:</label>
        <select>
            <option value="1">Yes</option>
            <option value="0">No</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="city">What city?:</label>
        <select>
            <option value="1">Other</option>
            <option value="0">Draper</option>
            <option value="0">Layton</option>
            <option value="0">Lehi</option>
            <option value="0">Murray</option>
            <option value="0">Ogden</option>
            <option value="0">Orem</option>
            <option value="0">Outside City Limits</option>
            <option value="0">Provo</option>
            <option value="0">Salt Lake City</option>
            <option value="0">Sandy</option>
            <option value="0">South Jordan</option>
            <option value="0">South Salt Lake</option>
            <option value="0">St. George</option>
            <option value="0">Taylorsville</option>
            <option value="0">West Jordan</option>
            <option value="0">West Valley City</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="county">What county did it take place in?:</label>
        <select>
            <option value="1">Other</option>
            <option value="0">Cache</option>
            <option value="0">Davis</option>
            <option value="0">Sale Lake</option>
            <option value="0">Utah</option>
            <option value="0">Washington</option>
            <option value="0">Weber</option>
        </select>
    </div>

    <div class="form-group">
        <label asp-for="route">What route did it take place on?:</label>
        <select>
            <option value="1">Other</option>
            <option value="0">15</option>
            <option value="0">68</option>
            <option value="0">80</option>
            <option value="0">89</option>
        </select>
    </div>

    <button type="submit">Calculate</button>
</form>

